@using Northwind.Models
@model IEnumerable<CartItem>

<h1>Your cart</h1>

<table>
    <tr>
        <th>Item Name</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>editing</th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="3" class="text-center">No items in cart</td></tr>
    }
    else
    {
        foreach (CartItem i in Model)
        {
            <tr>
                <td>@i.Product</td>
                <td>@i.Quantity</td>
                <!-- will Product.price work?-->
                <td>Price Placeholder</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@i.CartItemId" method="post">
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@i.CartItemId">Edit</a>
                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>

